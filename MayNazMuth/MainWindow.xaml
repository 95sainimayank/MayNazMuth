        <Button x:Name="btnBackup" Content="Backup Flight Details" HorizontalAlignment="Left" Margin="136,378,0,0" VerticalAlignment="Top" Width="155" FontWeight="Bold" FontSize="13" Height="35"/>
        <Label x:Name="lblFlightData" Content="" HorizontalAlignment="Left" Margin="44,437,0,0" VerticalAlignment="Top" Width="375" FontSize="14" Background="{x:Null}" Foreground="#FF0D6E1F"/>
